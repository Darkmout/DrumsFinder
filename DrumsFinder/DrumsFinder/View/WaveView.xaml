<UserControl x:Class="DrumsFinder.View.WaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:DrumsFinder.View.Converter"
             Background="gray" >


    <UserControl.Resources>
        <converter:FloatsToPathConverter x:Key="FloatsToPathConverter"></converter:FloatsToPathConverter>
    </UserControl.Resources>

    <Path Grid.Row="0" Data="{Binding Path=Wave, Converter={StaticResource FloatsToPathConverter}}"
              Stroke="Black"
              Stretch="Fill"
    >
    </Path>

</UserControl>
